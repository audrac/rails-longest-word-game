<div class= "container">
  <h1>New Game</h1>
  <ul class="letters">
    <% @letters.each do |letter| %>
      <li> <%= letter %></li>
    <% end %>
  </ul>

  <p>What is the longest word you can find?</p>

  <form action="/score" method="POST" data-turbo="false" class="form-inline">
    <div class="input-group mb-3">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input type="text" name="word" class="form-control">
      <div class="input-group-append">
        <input type="submit" value="Play" class="form-control btn btn-primary">
      </div>
    </div>
  </form>
</div>
